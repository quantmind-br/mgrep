{
  "name": "mgrep",
  "version": "0.2.0",
  "type": "module",
  "author": "mgrep contributors",
  "homepage": "https://github.com/mixedbread-ai/mgrep",
  "bugs": {
    "url": "https://github.com/mixedbread-ai/mgrep/issues"
  },
  "repository": {
    "type": "git",
    "url": "github:mixedbread-ai/mgrep"
  },
  "main": "index.js",
  "bin": {
    "mgrep": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/index.js && cp -r plugins dist/",
    "dev": "npx tsc && node dist/index.js",
    "test": "bats test/test.bats --filter-tags !long-running",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:all": "npm run test:unit && npm run test",
    "format": "biome check --write .",
    "format:check": "biome check .",
    "lint": "biome lint --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "search",
    "grep",
    "semantic",
    "vector",
    "qdrant",
    "embeddings",
    "rag"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "license": "Apache-2.0",
  "description": "A semantic grep-like search tool using Qdrant and configurable AI providers",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ignore": "^7.0.5",
    "istextorbinary": "^9.5.0",
    "openai": "^4.52.0",
    "ora": "^5.4.1",
    "p-limit": "^3.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "bats": "^1.13.0",
    "bats-assert": "github:ztombol/bats-assert",
    "bats-support": "github:ztombol/bats-support",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
